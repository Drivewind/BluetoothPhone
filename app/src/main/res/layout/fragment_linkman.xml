<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_linkman_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除联系人"
        android:textSize="36px"
        android:textColor="@android:color/white"
        android:layout_marginLeft="24px"
        android:layout_marginTop="26px"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="horizontal"
        android:layout_marginRight="170px"
        android:layout_marginLeft="170px"
        android:layout_below="@+id/tv_linkman_delete"
        >

        <com.anyonavinfo.bluetoothphone.bpclient.custom.ClearEditText
            android:id="@+id/linkman_search"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:background="@drawable/linkman_search_bg"
            android:drawableLeft="@drawable/linkman_search"
            android:hint="请输入关键字"
            android:singleLine="true"
            android:textSize="28px"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:imeOptions="actionDone"
            />

        <Button
            android:id="@+id/btn_edit_linkman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="编辑"
            android:textSize="40px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30px"
            android:textColor="#6be3a9"
            />

        <TextView
            android:id="@+id/linkman_tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textSize="40px"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:visibility="gone"
            />
        <CheckBox
            android:id="@+id/linkman_cb_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:button="@null"
            android:background="@drawable/selector_linkman_checkbox"
            android:layout_marginRight="20px"
            android:checked="false"
            android:visibility="gone"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_linkman_divide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divide_line"
        android:scaleType="fitXY"
        android:layout_below="@+id/ll_search"
        android:layout_alignLeft="@+id/ll_search"
        android:layout_alignRight="@+id/ll_search"
        android:visibility="invisible"
        android:layout_marginTop="15px"
        />

    <com.anyonavinfo.bluetoothphone.bpclient.custom.SideBar
        android:id="@+id/linkman_sidrbar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_search"
        android:layout_above="@+id/btn_delete_linkman"
        android:layout_marginLeft="80px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="20px"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_search"
        android:layout_above="@+id/btn_delete_linkman"
        android:layout_alignLeft="@+id/ll_search"
        android:layout_marginTop="40px"
        android:layout_marginBottom="20px"
        android:layout_alignRight="@+id/ll_search"
        >
        <TextView
            android:id="@+id/dialog"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#ff6be3a9"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <ListView
            android:id="@+id/test_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@null"
            android:fadeScrollbars="false"
            />
    </FrameLayout>

    <Button
        android:id="@+id/btn_delete_linkman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_search"
        android:layout_marginBottom="20px"
        android:layout_alignParentBottom="true"
        android:text="删除（0）"
        android:textSize="40px"
        android:textColor="@android:color/holo_red_light"
        android:background="@null"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_quit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_search"
        android:layout_marginBottom="20px"
        android:layout_alignParentBottom="true"
        android:text="返回"
        android:textSize="40px"
        android:textColor="#ff6be3a9"
        android:background="@null"
        android:visibility="gone"
        />

</RelativeLayout>
